{
    "compilerOptions": {
        "target": "es2024",
        "noEmitOnError": true,
        "module": "commonjs",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist/js/",
        "rootDir": "./src"
    }
