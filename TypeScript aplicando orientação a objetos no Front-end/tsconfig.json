{
    "compilerOptions": {
        "target": "es2024",
        "noEmitOnError": true,
        "module": "esnext",
        "strict": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist/js/",
        "rootDir": "./src"
    },
    "include": [
        "src/**/*.ts"
    ]
}
//Se todos os seus arquivos TypeScript estão em src, só o "rootDir": "./src" já é suficiente.
//Use "include" apenas se quiser especificar arquivos/pastas diferentes ou adicionais.
